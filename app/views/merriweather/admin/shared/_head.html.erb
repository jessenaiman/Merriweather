<meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
<%= csrf_meta_tags %>
<title><%= "Merriweather #{t('administration')}: " %>
<%= t(controller.controller_name, :default => controller.controller_name.titleize) %></title>

<%= stylesheet_link_tag 'admin/all' %>
<%= javascript_include_tag 'admin/all' %>

<%= javascript_tag do %>
  Merriweather.routes = <%== {
    :product_search       => merriweather.admin_products_path(:format => 'json'),
    :product_search_basic => merriweather.admin_products_path(:format => 'json', :json_format => 'basic', :limit => 10),
    :user_search          => merriweather.admin_search_users_path(:format => 'json', :limit => 10)
  }.to_json %>;

  strings = <%==
    [:no_results, :type_to_search, :searching].
    inject({}){|memo, item| {item => t(item) }}.to_json
  %>
<% end %>

<%= javascript_tag do -%>
  jQuery.alerts.dialogClass = 'merriweather';
  <%== "var AUTH_TOKEN = #{form_authenticity_token.inspect};" %>
<% end -%>

<%= yield :head %>
